@model TestBlog2.ViewModels.LoginViewModel
<section class="blog-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <section id="centre-wrapper" class="login">
                    <article>
                        <form asp-controller="account" asp-action="login" method="post">
                            <div class="form-group">
                                <div class="input-group">
                                    <input asp-for="Name" class="form-control" placeholder="Name">
                                    <span asp-validation-for="Name" class="input-group-addon"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="input-group">
                                    <input asp-for="Password" class="form-control" placeholder="Password">
                                    <span asp-validation-for="Password" class="input-group-addon"></span>
                                </div>
                            </div>
                            <div style="text-align: center;">
                                <div class="form-group" style="width: 208px; height: 38px;">
                                    <button style="margin-left: 10px; width: 208px; height:38px;" type="submit" class="btn btn-success btn-block">Submit</button>
                                </div>
                            </div>
                        </form>
                    </article>
                </section>
            </div>
        </div>
    </div>
</section>